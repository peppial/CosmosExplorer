<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CosmosExplorer.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CosmosExplorer.Maui"
    xmlns:views="clr-namespace:CosmosExplorer.Maui.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar x:Name="myTabBars">
        <Tab Title="Browse">
            <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:ConnectionStrings}"
        Route="ConnectionStrings" />
        </Tab>
        <Tab Title="About" >
            <ShellContent
        Title="Home2"
        ContentTemplate="{DataTemplate views:Explorer}"
        Route="Explorer" />
        </Tab>
    </TabBar>
</Shell>

